  "license": "MIT",
  "dependencies": {
    "babel-preset-es2015": "~6.6.0",
    "jade": "~1.11.0",
    "babelify": "~7.2.0",
    "browserify": "~13.0.0",
    "event-emitter": "~0.3.4"
  },
  "devDependencies": {
    "http-server": "~0.9.0",
    "watch": "~0.17.1",
    "livereload": "~0.4.1"
  }
}
